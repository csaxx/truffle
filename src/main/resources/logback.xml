<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%logger{36}] %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>output/debug.log</file>
    <append>false</append>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%logger{36}] %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Flink and GraalVM are very chatty at INFO/DEBUG â€” keep them quiet -->
  <logger name="org.apache.flink" level="WARN"/>
  <logger name="org.graalvm"      level="WARN"/>

  <!-- Our code at DEBUG so all lifecycle events are visible -->
  <logger name="org.csa.truffle"  level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
